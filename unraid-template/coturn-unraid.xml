<?xml version="1.0"?>
<Container version="2">
  <Name>Coturn TURN Server (Unraid)</Name>
  <Repository>muaeabudhabi/coturn-unraid:latest</Repository>
  <Registry>https://hub.docker.com/r/muaeabudhabi/coturn-unraid</Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>

  <Support>https://github.com/m975261/coturn-docker-unraid/issues</Support>
  <Project>https://github.com/m975261/coturn-docker-unraid</Project>

  <Overview>
This is a dynamic Coturn TURN server optimized for Unraid with full support for:
- Dynamic public IP using ddns.rotiti.com
- Cloudflare DNS (DNS-Only)
- Automatic dynamic external IP resolution
- TURN, STUN, UDP/TCP
- Optional TLS with Let's Encrypt certificates
- Full environment variable configuration from template
  </Overview>

  <Category>Network:Proxy Network:Tools</Category>

  <WebUI/>
  <Icon>https://raw.githubusercontent.com/m975261/coturn-docker-unraid/main/icon.png</Icon>

  <!-- TURN SERVER CONFIGURATION VARIABLES -->
  <Config Name="REALM (Domain Name)" Target="REALM" Default="ddns.rotiti.com" Type="Variable" Description="TURN Realm. Use your DNS hostname here." Required="true" Mask="false"/>

  <Config Name="EXTERNAL_IP or DNS" Target="EXTERNAL_IP" Default="ddns.rotiti.com" Type="Variable" Description="Your public IP or DNS hostname (Dynamic IP supported through ddns.rotiti.com)" Required="true" Mask="false"/>

  <Config Name="TURN Username" Target="USERNAME" Default="rotiti" Type="Variable" Description="TURN Authentication Username" Required="true" Mask="false"/>

  <Config Name="TURN Password" Target="PASSWORD" Default="RotitiTurnPass!2025" Type="Variable" Description="TURN Authentication Password" Required="true" Mask="true"/>

  <!-- TLS CONFIGURATION -->
  <Config Name="TLS Certificate Path" Target="TLS_CERT" Default="/etc/certs/fullchain.pem" Type="Variable" Description="Path to TLS certificate (optional)" Required="false" Mask="false"/>

  <Config Name="TLS Private Key Path" Target="TLS_KEY" Default="/etc/certs/privkey.pem" Type="Variable" Description="Path to TLS private key (optional)" Required="false" Mask="false"/>

  <!-- GENERAL SETTINGS -->
  <Config Name="Timezone" Target="TZ" Default="Asia/Dubai" Type="Variable" Description="Timezone setting" Required="true" Mask="false"/>

  <Config Name="Appdata Folder" Target="/config" Default="/mnt/user/appdata/coturn-unraid" Type="Path" Description="Persistent storage for configuration" Required="true" Mask="false"/>

  <!-- Extra params -->
  <ExtraParams>--pids-limit=2048</ExtraParams>

  <DockerHub>repo</DockerHub>
</Container>
